<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivParametresNotificationBack2"
        android:layout_width="35dp"
        android:layout_height="41dp"
        android:onClick="quitterParametreNotif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/arrow" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/barnavigationmessagerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageEdit"
        app:layout_constraintVertical_bias="0.875"
        app:menu="@menu/navigation" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="36dp"
        android:text="Paramètres"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/ivParametresNotificationBack2"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:text="Ne Permettre que la synchronisation sur le Wi-Fi"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="11dp"
        android:text="Notifications"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/switch3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch2" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="367dp"
        android:layout_height="26dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="29dp"
        android:text="Rester authentifié"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="368dp"
        android:layout_height="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp"
        android:text="Demandes d'ami"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="367dp"
        android:layout_height="26dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="24dp"
        android:text="Messages privés"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch3" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="371dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="Activités du forum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Switch
        android:id="@+id/switch6"
        android:layout_width="363dp"
        android:layout_height="32dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:text="Calendrier - Échancier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="24dp"
        android:text="IFT9999"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:text="IFT0000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch8" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="363dp"
        android:layout_height="29dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:text="Calendrier - Nouvel Événement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch5" />

    <Switch
        android:id="@+id/switch8"
        android:layout_width="368dp"
        android:layout_height="33dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="14dp"
        android:text="Nouvelle note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch6" />

</androidx.constraintlayout.widget.ConstraintLayout>